<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardbg"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Название события -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/titleEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Название"
                android:textColor="@color/textprimary"
                android:textSize="16sp"
                tools:text="IT-Meetup"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Описание события -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contentEditText"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:hint="Описание события"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:textColor="@color/textprimary"
                tools:text="Краткое описание встречи..."/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Кнопка и выбранная дата/время -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectDateTimeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дата и время"
            app:icon="@drawable/ic_event"
            app:iconTint="@color/colorPrimary"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/selectedDateTimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textsecondary"
            android:textSize="14sp"
            android:layout_marginBottom="14dp"
            android:visibility="visible"
            tools:text="31 окт 2025, 19:00"/>

        <!-- ON/OFFLINE событие -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/eventTypeToggleGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/onlineRadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ONLINE"
                style="@style/Widget.Material3.Button.TextButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/offlineRadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="OFFLINE"
                style="@style/Widget.Material3.Button.TextButton"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Кнопка и выбранная локация -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectLocationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Локация"
            app:icon="@drawable/ic_pindrop"
            app:iconTint="@color/colorPrimary"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/selectedLocationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/texthint"
            android:textSize="13sp"
            android:layout_marginBottom="14dp"
            android:visibility="gone"
            tools:text="г. Москва, ул. Ленина 12"/>

        <!-- Кнопка и выбранные спикеры -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectSpeakersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Спикеры"
            app:icon="@drawable/ic_alternate_email"
            app:iconTint="@color/colorPrimary"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/selectedSpeakersText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textlink"
            android:textSize="13sp"
            android:layout_marginBottom="14dp"
            android:visibility="gone"
            tools:text="@speaker1, @speaker2"/>

        <!-- Кнопка и выбранные участники -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectParticipantsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Участники"
            app:icon="@drawable/ic_group"
            app:iconTint="@color/colorPrimary"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/selectedParticipantsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textlink"
            android:textSize="13sp"
            android:layout_marginBottom="14dp"
            android:visibility="gone"
            tools:text="@user1, @user2"/>

        <!-- Кнопки вложений -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="14dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/attachImageButton"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Фото"
                app:icon="@drawable/ic_image"
                app:iconTint="@color/colorPrimary" />

            <Space android:layout_width="8dp" android:layout_height="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/attachVideoButton"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Видео"
                app:icon="@drawable/ic_videocam"
                app:iconTint="@color/colorPrimary" />

            <Space android:layout_width="8dp" android:layout_height="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/attachAudioButton"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Аудио"
                app:icon="@drawable/ic_mic"
                app:iconTint="@color/colorPrimary" />
        </LinearLayout>

        <!-- Превью вложения, тип и удаление -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp">

            <ImageView
                android:id="@+id/attachmentPreview"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/cardbg"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/attachmentTypeIndicator"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="end|bottom"
                android:layout_margin="8dp"
                android:visibility="gone"
                android:src="@drawable/ic_image" />

            <ImageButton
                android:id="@+id/removeAttachmentButton"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="top|end"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_close"
                app:tint="@color/colorPrimary"
                android:contentDescription="Удалить"
                android:visibility="gone"/>
        </FrameLayout>

        <!-- Кнопка публикации -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/publishButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Создать событие"
            android:textStyle="bold"
            app:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"/>

        <!-- Прогрессбар -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>
